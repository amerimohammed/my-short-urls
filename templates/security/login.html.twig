{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
    <form method="post" class="text-center w-100 mw-700">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Enter Your email..." class="form-control mt-2" autocomplete="email" required autofocus>
        <input type="password" name="password" id="inputPassword" placeholder="Enter your password..." class="form-control mt-2" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        <button class="btn btn btn-primary mt-2" type="submit">
            Sign in
        </button>
    </form>
</div>
{% endblock %}
